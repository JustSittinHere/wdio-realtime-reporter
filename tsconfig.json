{
    "compilerOptions": {
        "lib": [
            "dom",
            "es2015",
        ],
        "outDir": "dist",
        "moduleResolution": "node",
        "declaration": true,
        "target": "es6",
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "types": ["@wdio/sync", "node", "@types/jest"]
    },
    "include": [
        "src",
    ],
    "compileOnSave": false
}
